{
  "name": "shutdown-timer",
  "author": "Rui Franco",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build && electron .",
    "e": "ng build && electron .",
    "p": "ng build --prod && electron-packager . --no-prune --ignore=/node_modules --ignore=/e2e --ignore=/src --overwrite",
    "p:mac": "ng build --prod && electron-packager . --no-prune --ignore=/node_modules --ignore=/e2e --ignore=/src --overwrite --platform=darwin",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.18",
    "@angular/cli": "~8.3.18",
    "@angular/common": "~8.2.13",
    "@angular/compiler": "~8.2.13",
    "@angular/compiler-cli": "~8.2.13",
    "@angular/core": "~8.2.13",
    "@angular/forms": "~8.2.13",
    "@angular/language-service": "~8.2.13",
    "@angular/platform-browser": "~8.2.13",
    "@angular/platform-browser-dynamic": "~8.2.13",
    "@ng-bootstrap/ng-bootstrap": "^5.1.4",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "electron": "9.4.0",
    "electron-builder": "^22.8.1",
    "electron-packager": "^14.1.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ngx-childprocess": "0.0.6",
    "protractor": "~5.4.0",
    "rxjs": "~6.4.0",
    "ts-node": "~7.0.0",
    "tslib": "^1.10.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3",
    "zone.js": "~0.9.1"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true
  },
  "build": {
    "productName": "Shutdown Timer",
    "appId": "com.ruifr.shutdown-timer",
    "win": {
      "target": "portable"
    },
    "portable": {
      "unicode": false,
      "artifactName": "${productName}.${ext}"
    },
    "directories": {
      "output": "release",
      "buildResources": "buildResources"
    },
    "asar": true
  }
}
